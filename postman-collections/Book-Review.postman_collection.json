								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"const jsonData = pm.response.json();",
									"pm.environment.set(\"customer_token\", jsonData.token);",
									"pm.environment.set(\"customer_id\", jsonData.user.id);"
								],
